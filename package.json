{
  "name": "csshat-language-css",
  "title": "CSS",
  "version": "2.1.0",
  "description": "CSS language",
  "main": "main",
  "scope": "source.css",
  "codeLanguage": true,
  "engines": {
    "csshat": "~2.0.0",
    "avocode": "*"
  },
  "homepage": "https://github.com/csshat/language-css",
  "repository": {
    "type": "git",
    "url": "https://github.com/csshat/language-css"
  },
  "bugs": {
    "url": "https://github.com/csshat/language-css/issues"
  },
  "author": "Tomas Hanacek <tomashanacek@abdoc.net> (https://github.com/tomashanacek)",
  "contributors": [
    "Marek Hrabe <marekhrabe@abdoc.net> (https://github.com/marekhrabe)",
    "Petr Brzek <petrbrzek@abdoc.net> (https://github.com/petrbrzek)"
  ],
  "license": "MIT",
  "dependencies": {
    "autoprefixer-core": "^4.0.2",
    "octopus-helpers": "^1.0.0"
  },
  "settings": {
    "inheritFontStyles": {
      "type": "boolean",
      "default": true
    },
    "showComments": {
      "type": "boolean",
      "default": true
    },
    "showAbsolutePositions": {
      "type": "boolean",
      "default": false
    },
    "useColorName": {
      "type": "boolean",
      "default": true
    },
    "vendorPrefixes": {
      "type": "boolean",
      "default": true
    },
    "autoprefixer": {
      "type": "text",
      "validate": "setAutoprefixer",
      "default": "> 1%, last 2 versions, Firefox ESR, Opera 12.1"
    },
    "selector": {
      "type": "boolean",
      "default": false
    },
    "selectorType": {
      "type": "select",
      "options": [
        "id",
        "class",
        "element"
      ],
      "default": "class"
    },
    "selectorTextStyle": {
      "type": "select",
      "options": [
        "dash-case",
        "snake_case",
        "camelCase"
      ],
      "default": "dash-case"
    },
    "colorType": {
      "type": "select",
      "options": [
        "hex",
        "rgb",
        "hsl"
      ],
      "default": "hex"
    },
    "quoteType": {
      "type": "select",
      "options": [
        "'",
        "\""
      ],
      "default": "\""
    },
    "unit": {
      "type": "hidden",
      "options": [
        "px",
        "em",
        "rem"
      ],
      "default": "px"
    }
  },
  "bundledDependencies": [
    "octopus-helpers"
  ]
}
