{
  "name": "csshat-language-css",
  "title": "CSS new",
  "version": "2.0.0",
  "description": "CSS language",
  "scope": "source.css",
  "codeLanguage": true,
  "engines": {
    "atom": "*"
  },
  "main": "main.coffee",
  "homepage": "https://github.com/csshat/language-css",
  "repository": {
    "type": "git",
    "url": "https://github.com/csshat/language-css"
  },
  "bugs": {
    "url": "https://github.com/csshat/language-css/issues"
  },
  "author": "Petr Brzek <petrbrzek@abdoc.net> (https://github.com/petrbrzek)",
  "contributors": [
  ],
  "license": "MIT",
  "settings": {
    "vendorPrefixes": {
      "type": "boolean",
      "default": true
    },
    "inheritFontStyles": {
      "type": "boolean",
      "default": true
    },
    "selector": {
      "type": "boolean",
      "default": true
    },
    "selectorTextStyle": {
      "type": "select",
      "options": [
        "dash-case",
        "camelCase",
        "snake_case"
      ],
      "default": "snake_case"
    },
    "selectorType": {
      "type": "select",
      "options": [
        "id",
        "class",
        "element"
      ],
      "default": "class"
    },
    "colorType": {
      "type": "select",
      "options": [
        "hex",
        "rgb",
        "hsl"
      ],
      "default": "hex"
    },
    "showTextSnippet": {
      "type": "boolean",
      "default": true
    }
  },
  "dependencies": {
    "octopus-helpers": "^0.2.3"
  }
}
